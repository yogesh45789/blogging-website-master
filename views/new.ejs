<%- include('./partials/header.ejs') -%>
    <script src="https://cdn.tiny.cloud/1/no-api-key/tinymce/5/tinymce.min.js" referrerpolicy="origin"></script>
    <script>tinymce.init({ selector: 'textarea' });</script>
    <title>New blog post</title>
</head>

<body>

    <div class="container reply-form">
        <h1 class="mb-4 text-black">New blog post</h1>

        <form action="/blogs" method="POST" enctype="multipart/form-data">
            <div class="row">
                <div class="col-md-10 mb-3 form-group">
                    <input type="text" class="form-control" placeholder="Title" name="title" required>
                </div>
                <div class="col-md-10 mb-3 form-group">
                    <input type="text" class="form-control" placeholder="Author Name" name="author" required>
                </div>
                <div class="col-md-10 mb-3 form-group">
                    <textarea name="description" placeholder="Main Description" class="form-control" rows="20" cols="50"></textarea>
                </div>
                <div class="col-md-10 mb-3 form-group">
                    <input type="text" class="form-control" placeholder="Add Tags (Use comma as a seperator  ' , ' )" name="tags" required>
                </div>
                <div class="col-md-10 mb-3 form-group">
                    Add Main Image: <input type="file" name="image" id="image" class="form-control-file text-black">
                </div>

                <div class="col-md-10 mb-3 form-group">
                    <input type="text" class="form-control" placeholder="Add Meta Keywords (Use comma as a seperator  ' , ' )" name="metaKeywords" required>
                </div>

                <div class="col-md-10 mb-3 form-group">
                    <textarea name="metaDescription" placeholder="Add Meta Description (Max Length:155-160 characters)" class="form-control" rows="5" cols="3"></textarea>
                </div>

                <div class="col-md-10 mb-3 form-group">
                    <textarea name="aboutAuthor" placeholder="About Author" class="form-control" rows="5" cols="15"></textarea>
                </div>
                
                
                <div class="col-md-10 mb-3 form-group">
                    <input type="text" class="form-control" placeholder="Your Twitter user name" name="twitter" required>
                </div>

                <div class="col-md-10 mb-3 form-group">
                    <input type="text" class="form-control" placeholder="Your Instagram user name" name="instagram" required>
                </div>
                <div class="col-md-10 mb-3 form-group">
                    <input type="text" class="form-control" placeholder="Your website" name="website" required>
                </div>
                <div class="col-md-10 mb-3 form-group">
                    <a href="/" class="btn btn-warning">Cancel</a>
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
           
        </form>
    </div>

<%- include('./partials/footer.ejs') -%>